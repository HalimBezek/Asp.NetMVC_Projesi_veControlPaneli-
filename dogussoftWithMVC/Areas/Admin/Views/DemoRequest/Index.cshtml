
@{
    ViewBag.Title = "Admin | Demo Talepleri";
}



 <!-- /. PAGE WRAPPER  -->
<div id="page-wrapper">
    <div id="page-inner">
        <div class="row">
            <div class="col-lg-12" align="center">
                <h3>DEMO TALEPLERİ</h3>
            </div>
        </div>
        <hr />
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                 
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>Şirket Bilgisi</th>
                    <th>Telefon Numarası</th>
                    <th>Talep Tarihi</th>
                    <th>Cevap Verildi Mi?</th>
                    <th>Cevap Tarihi</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @{
                    var demoTalepBilgileri = (IQueryable<dogussoftWithMVC.Models.demoBilgiler>)ViewBag.demoTalepBilgileri;

                    foreach (var item in demoTalepBilgileri)
                    {
                        <tr>
                        
                            <td>@item.adi</td>
                            <td>@item.soyadi</td>
                            <td>@item.sirketBilgileri</td>
                            <td>@item.Tel</td>
                            <td>@item.TalepTarihi</td>

                            @if (item.cevapVerildi)
                            {
                                <td align="center"><img src="~/Content/img/true.png" height="30" /> </td>
                                <td>@item.CevapTarihi</td>
                            }
                            else
                            {
                                <td align="center"><img src="~/Content/img/false.png" height="30" /> </td>
                                <td>---</td>
                            }

                            <td>

                                @if (item.goruldu)
                                {
                                    <a href="" class="btn btn-warning btn-xs">Görüldü</a>
                                }
                                else
                                {
                                    <a href="" class="btn btn-info btn-xs">Görülmedi</a>
                                }

                                <a href="/admin/demoRequest/requestDetay/@item.Id" class="btn btn-primary btn-xs">Detaylar</a> 
                            </td>
                        </tr>
                    }



                }
                             
                
            </tbody>
        </table>

        <hr />
        <div class="row">
            <div class="col-lg-12 col-md-12">
