
@{
    ViewBag.Title = "Admin | Gelen Mesajlar";
}



<!-- /. PAGE WRAPPER  -->
<div id="page-wrapper">
    <div id="page-inner">
        <div class="row">
            <div class="col-lg-12" align="center">
                <h3>GELEN MESAJLAR</h3>
            </div>
        </div>
        <hr />
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>

                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>E-mail</th>
                    <th>Şirket Bilgisi</th>                    
                    <th>Talep Tarihi</th>
                    <th>Cevap Verildi Mi?</th>
                    <th>Cevap Tarihi</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
    @{
        var iletisimBilgileri = (IQueryable<dogussoftWithMVC.Models.IletisimBigileri>)ViewBag.mesajBilgileri;

        foreach (var item in iletisimBilgileri)
        {
            <tr>

                <td>@item.adi</td>
                <td>@item.soyadi</td>
                <td>@item.Email</td>               
                <td>@item.SirketBilgileri</td>
                <td>@item.TalepTarihi</td>

                @if (item.cevapVerildi)
                {
                        <td align="center"><img src="~/Content/img/true.png" height="30" /> </td>
                        <td>@item.CevapTarihi</td>
                }
                else
                {
                        <td align="center"><img src="~/Content/img/false.png" height="30"/> </td>
                        <td>---</td>
                }
                <td> 
                        @if (item.goruldu)
                        {
                            <a href="" class="btn btn-warning btn-xs">Görüldü</a>
                        }
                        else
                        {
                            <a href="" class="btn btn-info btn-xs">Görülmedi</a>
                        }
              
                            <a href="/admin/message/mesajDetay/@item.Id" class="btn btn-primary btn-xs">Detaylar</a> 
                 </td>
            </tr>
            
        }
            
    }      

            </tbody>
        </table>
                    
        <hr />
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <input type="button" value="Example 1" id="test">
